<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout style="@style/tab_outer">

        <LinearLayout style="@style/tab_inner"
            android:padding="0dp">

            <TextView style="@style/title"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/username"/>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/border_grey">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView style="@style/text_bigger"
                            android:id="@+id/total_ride"/>

                        <TextView style="@style/logo_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_ride"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView style="@style/text_bigger"
                            android:id="@+id/total_ride_km"/>

                        <TextView style="@style/logo_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_ride_km"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView style="@style/text_bigger"
                            android:id="@+id/total_average_duration"/>

                        <TextView style="@style/logo_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_average_duration"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView style="@style/text_bigger"
                            android:id="@+id/total_average_km"/>

                        <TextView style="@style/logo_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_average_km"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView style="@style/text_bigger"
                            android:id="@+id/average_speed"/>

                        <TextView style="@style/logo_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/average_speed"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView style="@style/text_bigger"
                            android:id="@+id/top_speed"/>

                        <TextView style="@style/logo_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/top_speed"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout android:id="@+id/top_routes_containers"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <LinearLayout style="@style/settings_title_outer"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp">

                    <LinearLayout style="@style/settings_title_inner">

                        <TextView style="@style/title"
                            android:text="@string/fastest_ride"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout android:id="@+id/fastest_ride"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/border_grey"
                    android:paddingBottom="2dp"/>

                <LinearLayout style="@style/settings_title_outer"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp">

                    <LinearLayout style="@style/settings_title_inner">

                        <TextView style="@style/title"
                            android:text="@string/longest_ride"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout android:id="@+id/longest_ride"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/border_grey"
                    android:paddingBottom="2dp"/>

                <LinearLayout style="@style/settings_title_outer"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp">

                    <LinearLayout style="@style/settings_title_inner">

                        <TextView style="@style/title"
                            android:text="@string/furthest_ride"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout android:id="@+id/furthest_ride"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/border_grey"
                    android:paddingBottom="2dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
