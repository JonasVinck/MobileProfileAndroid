<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.RideDisplayActivity">

    <LinearLayout style="@style/box_container"
        android:layout_margin="0dp">

        <LinearLayout style="@style/box_outer">

            <LinearLayout style="@style/box_inner"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView style="@style/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="comming soon"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
