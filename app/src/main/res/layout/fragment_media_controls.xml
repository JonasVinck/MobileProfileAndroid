<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/controls"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".Activities.MeasuringActivity"
    android:background="@color/darker_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/black"
        android:paddingBottom="2dp">

        <TextView style="@style/logo_text"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textAlignment="center"
            android:background="@color/colorPrimaryDark"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:baselineAligned="false"
        android:paddingTop="2dp">

        <LinearLayout style="@style/tab_outer"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:layout_width="match_parent">

            <LinearLayout style="@style/tab_inner"
                android:padding="0dp"
                android:id="@+id/volume_down"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="volumeDown">

                <TextView
                    style="@style/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textSize="40sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/tab_outer"
            android:layout_height="match_parent"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1">

            <LinearLayout style="@style/tab_inner"
                android:padding="0dp"
                android:gravity="center"
                android:id="@+id/previous"
                android:onClick="previous">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/ic_media_previous" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/tab_outer"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout style="@style/tab_inner"
                android:padding="0dp"
                android:gravity="center"
                android:id="@+id/play_pause"
                android:onClick="playPause">

                <ImageView android:id="@+id/play_pause_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/ic_media_play" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/tab_outer"
            android:layout_height="match_parent"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1">

            <LinearLayout style="@style/tab_inner"
                android:padding="0dp"
                android:gravity="center"
                android:id="@+id/next"
                android:onClick="next">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/ic_media_next" />
        </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/tab_outer"
            android:layout_marginStart="1dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:layout_width="match_parent">

            <LinearLayout style="@style/tab_inner"
                android:padding="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/volume_up"
                android:onClick="volumeUp">

                <TextView
                    style="@style/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textSize="40sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
